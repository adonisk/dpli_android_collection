<?xml version="1.0" encoding="utf-8"?>

<FrameLayout 
  	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" 
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_gravity="center"
 	> 

	
	<LinearLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:minWidth="310dip"
  		android:minHeight="100dip"
  		android:background="@drawable/panel_background"
  		android:orientation="vertical"
  		android:layout_marginTop="18dip"
  		android:layout_gravity="top|right"
  		>
  
 		<com.ezetap.utils.MyTextView 
 			android:id="@+id/alert_title" 
 			android:layout_width="fill_parent"  
 			android:layout_height="wrap_content" 
 			android:textColor="#FFFFFF" 
 			android:text="" 
 			android:textSize="15sp" 
 			android:textStyle="bold"
 			android:background="#222222" 
 			android:layout_margin="0dip"
 			android:padding="12dip"
 			android:visibility="gone"
 			android:gravity="center"
			/>
		
		<ImageView 
			android:id="@+id/alert_title_separator"
        	android:layout_width="fill_parent"
        	android:layout_height="1dip"
        	android:gravity="fill_horizontal"
        	android:src="@drawable/custom_divider"
        	android:visibility="gone"
        	/>
        	
        	<com.ezetap.utils.MyTextView 
 			android:id="@+id/alert_time" 
 			android:layout_height="wrap_content" 
 			android:layout_width="wrap_content" 
 			android:textColor="#FFFFFF" 
 			android:text="" 
 			android:layout_marginLeft="15dip"
 			android:layout_marginTop="3dip"
 			android:textSize="15sp" 
  			android:visibility="gone"
			/>
	
		<com.ezetap.utils.MyTextView 
 			android:id="@+id/alert_message" 
 			android:layout_height="wrap_content" 
 			android:layout_width="wrap_content" 
 			android:textColor="#FFFFFF" 
 			android:text="" 
  			android:textSize="15sp"
  			android:layout_marginLeft="10dip"
  			android:layout_marginRight="12dip"
  			android:layout_marginBottom="12dip"
  			android:layout_marginTop="10dip"
  			android:gravity="center"
  			android:visibility="gone"
			/>
			
		<com.ezetap.utils.MyButton
			android:id="@+id/alert_button" 
 			android:layout_height="wrap_content" 
 			android:layout_width="120dip" 
 			android:layout_gravity="center_horizontal"	
 			android:text=""
 			android:layout_margin="10dip"
 			android:visibility="gone"
			/> 
			
			<LinearLayout 
				android:id="@+id/alert_progressbar"
				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:orientation="horizontal"
  				android:layout_margin="6dip"
  				android:layout_gravity="center"
  				android:visibility="gone"
				>
				
				<ProgressBar 
					android:id="@+id/alert_progress_spinner"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:minWidth="50dip"
        			android:minHeight="50dip"
        			android:layout_gravity ="center_vertical|left"
        			style="@android:style/Widget.ProgressBar"
        			android:layout_margin ="6dip"
        			/>
	
				<com.ezetap.utils.MyTextView 
 					android:id="@+id/Alert_progress_message" 
 					android:layout_height="wrap_content" 
 					android:layout_width="wrap_content" 
 					android:textColor="#FFFFFF" 
 					android:text="" 
  					android:textSize="15sp"
  					android:layout_margin="6dip"
  					android:layout_gravity ="center"
					/>
			</LinearLayout>
	</LinearLayout>
	
	<ImageView 
		android:id="@+id/alert_dismiss_button"
		android:layout_width="42dip"
		android:layout_height="45dip"
		android:layout_gravity="top|right"
		android:src="@drawable/dismiss_button"
		android:layout_marginRight="8dip"
		android:visibility="gone"
		/>
	
</FrameLayout>
